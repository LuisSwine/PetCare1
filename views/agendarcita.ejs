                    <br>Distributed By: <a class="border-bottom" href="https://themewagon.com" target="_blank">ThemeWagon</a>
                </div>
            </div>
        </div>
           
        <!-- Footer End -->

        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <script>
        function seleccionarClinica(objeto){
            let veterinarios = JSON.parse(decodeURIComponent(objeto))
            let selected = document.getElementById('veterinario').value
    
            const clinica = document.getElementById('clinica')
    
            veterinarios.forEach((veterinario)=>{
                if(veterinario.id == selected){
                    clinica.setAttribute('value', veterinario.id_clinica)
                }
            })
        }
    </script>

