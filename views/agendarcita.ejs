<%- include('partials/init-doc.ejs', {tituloPagina: 'Agendar Cita'}) %> 

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <%- include('partials/spinner.ejs') %> 
        <!-- Spinner End -->

        <!-- Header Start -->
        <%- include('partials/main-header.ejs', {active: 1, usuario: usuario}) %> 
        <!-- Header End -->

        <!-- Contact Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h6 class="section-title text-center text-dark text-uppercase">Agendar una nueva cita</h6>
                </div>
                <div class="row g-4">
                    <div class="col-md-12">
                        <div class="wow fadeInUp" data-wow-delay="0.2s">
                            <form id="agendarcita" action="/agendarcita" method="post">
                                <div class="row g-3">
                                    <div class="col-md-12">
                                        <div class="form-floating">
                                            <input type="number" class="form-control" id="id_usuario" name="id_usuario" value="<%= usuario.id %>" hidden required>
                                            <input type="text" class="form-control" id="nombre" name="nombre" value="<%= usuario.nombre %>" readonly required>
                                            <label for="nombre">Nombre</label>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-floating">
                                            <select class="form-control" id="mascota" name="mascota" required>
                                                <option value="0" selected disabled>--Seleccione la mascota que recibira la consulta--</option>
                                                <% mascotas.forEach((mascota)=>{ %> 
                                                    <option value="<%= mascota.id %>"><%= mascota.nombre %> </option>
                                                <% }) %> 
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-floating">
                                            <input type="number" class="form-control" id="clinica" name="clinica" <% if(clinica){%>value="<%= clinica %>"<%} %> hidden>
                                            <select class="form-control" id="veterinario" name="veterinario" required onchange="seleccionarClinica('<%= encodeURIComponent(JSON.stringify(veterinarios)) %>')">
                                                <option value="0" selected disabled>--Seleccione el veterinario que quiere que lo atienda--</option>
                                                <% veterinarios.forEach((veterinario)=>{ %> 
                                                    <option value="<%= veterinario.id %>" <% if(veterinario_s && veterinario_s == veterinario.id){%>selected<%} %> ><%= veterinario.nombre %> <%= veterinario.apellido %> - <%= veterinario.clinica %></option>
                                                <% }) %> 
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-floating">
                                            <input type="time" class="form-control" id="hora" name="hora">
                                            <label for="hora">Indique la hora de su preferencia</label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-floating">
                                            <input type="date" class="form-control" id="fecha" name="fecha">
                                            <label for="fecha">Seleccione la fecha de su preferencia</label>
                                        </div>
                                    </div><div class="col-md-4">
                                        <div class="form-floating">
                                            <select class="form-control" id="tipo" name="tipo" required>
                                                <option value="0" selected disabled>--Seleccione el tipo de consulta--</option>
                                                <% tipos.forEach((tipo)=>{ %> 
                                                    <option value="<%= tipo.id %>"><%= tipo.tipo %></option>
                                                <% }) %> 
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-floating">
                                            <textarea class="form-control" id="descripcion" name="descripcion" rows="5" cols="50"></textarea>
                                            <label for="descripcion">Realice una descripcion del motivo de la consulta</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn btn-info w-100 py-3" type="submit">Agendar Cita</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Contact End -->


        <!-- Footer Start -->
        
        <div class="copyright">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    &copy; <a class="border-bottom" href="#">PetCare</a>, Todos los derechos reservados. 
