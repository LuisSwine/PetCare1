<%- include('partials/init-doc.ejs', {tituloPagina: 'Perfil Pet Owner'}) %> 

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <%- include('partials/spinner.ejs') %> 
        <!-- Spinner End -->

        <!-- Header Start -->
        <%- include('partials/main-header.ejs', {active: 5, usuario: usuario}) %> 
        <!-- Header End -->

        <div class="row">
            <div class="col-lg-3">
                <div class="col-lg-12 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="rounded shadow overflow-hidden">
                        <div class="position-relative">
                            <img class="img-fluid" src="img/mascota.png" alt="">
                            <div class="position-absolute start-50 top-100 translate-middle d-flex align-items-center">
                            </div>
                        </div>
                        <div class="text-center p-4 mt-3">
                            <h5 class="fw-bold mb-0 text-info"><u><%= petownerinfo[0].nombre %> <%= petownerinfo[0].apellido %></u></h5>
                            <h6><%= petownerinfo[0].correo %></h6>
                            <h6><%= petownerinfo[0].celular %></h6>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>Consultas Proximas</h4>
                        </div>
                        <div class="card-body">
                            <ul class="timeline">
                                <% consultasproximas.forEach((consulta)=>{%> 
                                <li>
                                    <div class="timeline-badge primary"><%= consulta.dia.toLocaleDateString('en-GB') %> - <%= consulta.hora %></div>
                                    <div class="timeline-panel">
                                        <div class="timeline-heading">
                                            <h5 class="timeline-title"><%= consulta.mascota %></h5>
                                        </div>
                                        <div class="timeline-body">
                                            <p><%= consulta.veterinario_nombre %> <%= consulta.veterinario_apellido %> - <%= consulta.clinica %></p>
                                        </div>
                                    </div>
                                </li>
                                <%}) %>
                            </ul>
                        </div>
                    </div>
                    <!-- /# card -->
                </div>
            </div>
            <div class="col-lg-9">
                <div class="card">
                    <div class="card-title">
                        <h4>Mascotas </h4>
                    </div>
                    <div class="bootstrap-data-table-panel">
                        <div class="table-responsive">
                            <table id="row-select" class="display table table-borderd table-hover">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Tipo</th>
                                        <th>Especie</th>
                                        <th>Sexo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% mascotas.forEach((mascota)=>{ %> 
                                        <tr>
                                            <td><%= mascota.nombre %></td>
                                            <td><%= mascota.tipo %></td>
                                            <td><%= mascota.especie %></td>
                                            <td><%= mascota.sexo %> </td>
                                        </tr>
                                    <% }) %> 
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Tipo</th>
                                        <th>Especie</th>
                                        <th>Sexo</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-title">
                        <h4>Veterinarios</h4>
                    </div>
                    <div class="bootstrap-data-table-panel">
                        <div class="table-responsive">
                            <table id="row-select1" class="display table table-borderd table-hover">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Cedula</th>
                                        <th>Telefono</th>
                                        <th>Correo</th>
                                        <th>Clinica</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% veterinarios.forEach((veterinario)=>{%> 
                                    <tr>
                                        <td><%= veterinario.veterinario_nombre %> <%= veterinario.veterinario_apellido %></td>
                                        <td><%= veterinario.cedula_veterinario %></td>
                                        <td><%= veterinario.veterinario_celular %></td>
                                        <td><%= veterinario.veterinario_correo %></td>
                                        <td><%= veterinario.clinica %></td>
                                    </tr>
                                    <%}) %>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Cedula</th>
                                        <th>Telefono</th>
                                        <th>Correo</th>
                                        <th>Clinica</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-title">
                        <h4>Todas las Citas</h4>
                    </div>
                    <div class="bootstrap-data-table-panel">
                        <div class="table-responsive">
                            <table id="row-select2" class="display table table-borderd table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Fecha</th>
                                        <th>Hora</th>
                                        <th>Mascota</th>
                                        <th>Veterinario</th>
                                        <th>Clinica</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% consultas.forEach((consulta)=>{%> 
                                    <tr>
                                        <td><%= consulta.id %></td>
                                        <td><%= consulta.dia.toLocaleDateString('en-GB') %></td>
                                        <td><%= consulta.hora %></td>
                                        <td><%= consulta.mascota %></td>
                                        <td><%= consulta.veterinario_nombre %> <%= consulta.veterinario_apellido %></td>
                                        <td><%= consulta.clinica %></td>
                                    </tr>
                                    <%}) %>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>ID</th>
                                        <th>Fecha</th>
                                        <th>Hora</th>
                                        <th>Mascota</th>
                                        <th>Veterinario</th>
                                        <th>Clinica</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- Footer Start -->
        <div class="copyright">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    &copy; <a class="border-bottom" href="#">PetCare</a>, Todos los derechos reservados. 
