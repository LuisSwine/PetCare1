<%- include('partials/init-doc.ejs', {tituloPagina: 'Dejar Comentario'}) %> 

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <%- include('partials/spinner.ejs') %> 
        <!-- Spinner End -->

        <!-- Header Start -->
        <%- include('partials/main-header.ejs', {active: 1, usuario: usuario}) %> 
        <!-- Header End -->

        <!-- Contact Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h6 class="section-title text-center text-dark text-uppercase">Redactar un comentario</h6>
                </div>
                <div class="row g-4">
                    <div class="col-md-12">
                        <div class="wow fadeInUp" data-wow-delay="0.2s">
                            <form id="coment" action="/addcomment" method="post">
                                <div class="row g-3">
                                    <div class="col-md-12">
                                        <div class="form-floating">
                                            <input type="number" class="form-control" id="id_usuario" name="id_usuario" value="<%= usuario.id %>" hidden required>
                                            <input type="text" class="form-control" id="nombre_user" name="nombre_user" value="<%= usuario.nombre %> <%= usuario.apellido %>" readonly required>
                                            <label for="nombre_user">Nombre del Usuario</label>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-floating">
                                            <input type="number" class="form-control" id="id_veterinario" name="id_veterinario" value="<%= veterinario.id %>" hidden required>
                                            <input type="text" class="form-control" id="nombre_vet" name="nombre_vet" value="<%= veterinario.nombre %> <%= veterinario.apellido %>" readonly required>
                                            <label for="nombre">Nombre del Veterinario</label>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="titulo" name="titulo" required>
                                            <label for="titulo">Titulo del comentario</label>
                                        </div>
                                    </div>
                                    <div class="col-md-10">
                                        <div class="form-floating">
                                            <textarea class="form-control" id="comentario" name="comentario" rows="5" cols="50"></textarea>
                                            <label for="comentario">Deja aqui tu comentario</label>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-floating">
                                            <input type="number" class="form-control" id="puntuacion" name="puntuacion" min="1" max="5" step="0.5" required>
                                            <label for="puntuacion">Puntuar 0-5</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn btn-info w-100 py-3" type="submit">Comentar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Contact End -->


        <!-- Footer Start -->
        
        <div class="copyright">
            <div class="row">
