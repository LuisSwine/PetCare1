<%- include('partials/init-doc.ejs', {tituloPagina: 'Veterinarios'}) %> 

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <%- include('partials/spinner.ejs') %> 
        <!-- Spinner End -->

        <!-- Header Start -->
        <%- include('partials/main-header.ejs', {active: 3, usuario: usuario}) %> 
        <!-- Header End -->


        <!-- Team Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h6 class="section-title text-center text-info text-uppercase">PetCare</h6>
                    <h1 class="mb-5">Los <span class="text-info text-uppercase">Veterinarios</span></h1>
                </div>
                <div class="row g-4">
                    <% veterinarios.forEach((veterinario)=>{%>
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="room-item shadow rounded overflow-hidden" style="cursor: pointer;" onclick="window.open('/perfilveterinario?veterinario=<%= veterinario.id %>', '_self')">
                                <div class="position-relative">
                                    <img class="img-fluid" src="img/medico.png" alt="">
                                </div>
                                <div class="p-4 mt-2">
                                    <div class="d-flex justify-content-between mb-3">
                                        <h5 class="mb-0"><%= veterinario.nombre %> <%= veterinario.apellido %></h5>
                                        <div class="ps-2">
                                            <% for(i = 0; i < parseInt(veterinario.valoracion); i++){%>
                                            <small class="fa fa-star text-warning"></small>
                                            <% } %>
                                            <% if((veterinario.valoracion - parseInt(veterinario.valoracion)) > 0){%>
                                                <small class="fa fa-star-half text-warning"></small> 
                                            <%} %> 
                                        </div>
                                    </div>
                                    <div class="d-flex mb-1">
                                        <small class="border-end me-3 pe-3"><i class="fa fa-certificate text-primary me-2"></i>Numero de Cedula: <%= veterinario.cedula %></small>
                                    </div>
                                    <p class="text-body mb-1">Telefono: <%= veterinario.celular %></p>
                                    <p class="text-body mb-1">Correo: <%= veterinario.correo %></p>
                                    <div class="d-flex justify-content-between">
                                        <a class="btn btn-sm btn-info rounded py-2 px-4" href="/addcomment?veterinario=<%= veterinario.id %>">Dejar Comentario</a>
                                        <a class="btn btn-sm btn-dark rounded py-2 px-4" href="/agendarcita?usuario=<%= usuario.id %>&clinica=<%= veterinario.id_clinica %>&veterinario=<%= veterinario.id %>">Agendar Cita</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <%}) %> 
                </div>
            </div>
        </div>
        <!-- Team End -->


        <!-- Footer Start -->
        
        <div class="copyright">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    &copy; <a class="border-bottom" href="#">PetCare</a>, Todos los derechos reservados. 
					<!--/*** This template is free as long as you keep the footer author’s credit link/attribution link/backlink. If you'd like to use the template without the footer author’s credit link/attribution link/backlink, you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". Thank you for your support. ***/-->
					Designed By <a class="border-bottom" href="https://htmlcodex.com">HTML Codex</a>
                    <br>Distributed By: <a class="border-bottom" href="https://themewagon.com" target="_blank">ThemeWagon</a>
                </div>
            </div>
        </div>
           
        <!-- Footer End -->

        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

