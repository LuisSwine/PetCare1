<%- include('partials/init-doc.ejs', {tituloPagina: 'Clinicas'}) %> 

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <%- include('partials/spinner.ejs') %> 
        <!-- Spinner End -->

        <!-- Header Start -->
        <%- include('partials/main-header.ejs', {active: 4, usuario: usuario}) %> 
        <!-- Header End -->


        <!-- Team Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h6 class="section-title text-center text-info text-uppercase">PetCare</h6>
                    <h1 class="mb-5">Las <span class="text-info text-uppercase">Clinicas</span></h1>
                </div>
                <div class="row g-4">
                    <% if(usuario.tipo_usuario == 1){%>
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s" onclick="window.open('/sugerencias', '_self')" style="cursor: pointer;">
                            <div class="room-item shadow rounded overflow-hidden">
                                <div class="position-relative">
                                    <img class="img-fluid" src="img/hospital.png" alt="">
                                </div>
                                <div class="p-4 mt-2">
                                    <div class="d-flex justify-content-between mb-3">
                                        <h5 class="mb-0">Hay nuevas Sugerencias</h5>
                                    </div>
                                    <p class="text-body mb-3">Conoce las sugerencias de clínicas para poder agregar nuevas al sistema</p>
                                    <div class="d-flex justify-content-between">
                                        <a class="btn btn-sm btn-info rounded py-2 px-4" href="/sugerencias">Sugerencias</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <%}else{%> 
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s" onclick="window.open('/sugerirclinica', '_self')" style="cursor: pointer;">
                            <div class="room-item shadow rounded overflow-hidden">
                                <div class="position-relative">
                                    <img class="img-fluid" src="img/hospital.png" alt="">
                                </div>
                                <div class="p-4 mt-2">
                                    <div class="d-flex justify-content-between mb-3">
                                        <h5 class="mb-0">¿Conoces otra Clinica?</h5>
                                    </div>
                                    <p class="text-body mb-3">Tus sugerencias nos ayudan a crecer, ingresa los datos de la clinica, nosotros nos aseguraremos de que exista y la validaremos</p>
                                    <div class="d-flex justify-content-between">
                                        <a class="btn btn-sm btn-info rounded py-2 px-4" href="/sugerirclinica">Sugerir Clinica</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <%} %>
                    <% clinicas.forEach((clinica)=>{%> 
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s" onclick="window.open('/perfilclinica?clinica=<%= clinica.id %>', '_self')" style="cursor: pointer;">
                            <div class="room-item shadow rounded overflow-hidden">
                                <div class="position-relative">
                                    <img class="img-fluid" src="img/hospital.png" alt="Icono de Hospital">
                                </div>
                                <div class="p-4 mt-2">
                                    <div class="d-flex justify-content-between mb-3">
                                        <h5 class="mb-0"><%= clinica.nombre %></h5>
                                        <div class="ps-2">
                                            <% for(i = 0; i < parseInt(clinica.valoracion); i++){%>
                                                <small class="fa fa-star text-warning"></small>
                                                <% } %>
                                                <% if((clinica.valoracion - parseInt(clinica.valoracion)) > 0){%>
                                                    <small class="fa fa-star-half text-warning"></small> 
                                                <%} %> 
                                        </div>
                                    </div>
                                    <div class="d-flex mb-3">
                                        <small class="border-end me-3 pe-3" onclick="window.open('<%= clinica.pagina %>', '_blank')" style="cursor: pointer;"><i class="fa fa-link text-primary me-2"></i>Web</small>
                                        <% let ruta = `https://www.google.com.mx/maps/search/${clinica.calle} ${clinica.exterior}, ${clinica.colonia}, ${clinica.cp}, ${clinica.municipio}, ${clinica.estado}` %> 
                                        <small class="border-end me-3 pe-3" onclick="window.open('<%= ruta %>', '_blank')" style="cursor: pointer;"><i class="fa fa-map text-primary me-2"></i>Localizar</small>
                                        <small class="border-end me-3 pe-3"><i class="fa fa-home text-primary me-2"></i><% if(clinica.visita_domicilio == 0){%>NO<%}else{%>SI<%} %></small>
                                    </div>
                                    <p class="text-body mb-3"><%= clinica.calle %> <%= clinica.exterior %>-<%= clinica.interior %>, <%= clinica.colonia %>, <%= clinica.cp %>, <%= clinica.municipio %>, <%= clinica.estado %></p>
                                    
                                </div>
                            </div>
                        </div>
                    <%}) %>
                </div>
            </div>
        </div>
        <!-- Team End -->


        <!-- Footer Start -->
        
        <div class="copyright">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    &copy; <a class="border-bottom" href="#">PetCare</a>, Todos los derechos reservados. 
